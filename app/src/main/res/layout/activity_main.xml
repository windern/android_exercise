<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.windern.test.androidexercise.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.windern.test.androidexercise.ObservableScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_whole_title"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:text="标题内容" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/hscroll_left_bar"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_scroll_title1"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:background="#FF0000"
                            android:text="标题1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:text="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:text="2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:text="3" />

                        <TextView
                            android:id="@+id/tv_scroll_title2"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:background="#00FF00"
                            android:text="标题2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:text="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:text="2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:text="3" />

                    </LinearLayout>

                    <com.windern.test.androidexercise.ObservableHorizontalScrollView
                        android:id="@+id/hscroll_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/view_scroll_title1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#FF0000">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题A" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题B" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题C" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题D" />
                                </LinearLayout>
                            </RelativeLayout>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:text="内容1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:text="内容2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:text="内容3" />

                            <RelativeLayout
                                android:id="@+id/view_scroll_title2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#00FF00">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题A" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题B" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题C" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:text="子标题D" />
                                </LinearLayout>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:text="内容1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:text="内容2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:text="内容3" />

                        </LinearLayout>
                    </com.windern.test.androidexercise.ObservableHorizontalScrollView>
                </RelativeLayout>

            </LinearLayout>
        </com.windern.test.androidexercise.ObservableScrollView>


        <RelativeLayout
            android:id="@+id/container_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.windern.test.androidexercise.ObservableHorizontalScrollView
                android:id="@+id/hscroll_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/view_flow_title1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FF0000"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="100dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题A" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题B" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题C" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题D" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/view_flow_title2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#00FF00"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="100dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题A" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题B" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题C" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="子标题D" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </com.windern.test.androidexercise.ObservableHorizontalScrollView>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/view_flow_fixed_title1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="#FF0000"
                    android:text="标题1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/view_flow_fixed_title2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="#00FF00"
                    android:text="标题2"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>

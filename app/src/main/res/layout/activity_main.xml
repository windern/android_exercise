<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.windern.test.androidexercise.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.windern.test.androidexercise.ObservableScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:text="标题内容" />

                <TextView
                    android:id="@+id/tv_scroll_title1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FF0000"
                    android:text="标题1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="内容1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="内容2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="内容3" />

                <TextView
                    android:id="@+id/tv_scroll_title2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="#00FF00"
                    android:text="标题2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="内容1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="内容2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="内容3" />

            </LinearLayout>
        </com.windern.test.androidexercise.ObservableScrollView>

        <LinearLayout
            android:id="@+id/ll_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_flow_title1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="#FF0000"
                android:text="标题1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_flow_title2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="#00FF00"
                android:text="标题2"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
